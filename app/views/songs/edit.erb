<div class="col-md-6">
  <h2>Edit Song</h2>
  <form action="/songs/<%= @song.slug %>" method="POST">
    <input type="hidden" name="_method" value="patch">
    <div class="form-group">
      Song Name
      <input type="text" id="Name" name="song[name]" class="form-control" value="<%= @song.name %>">
    </div>

    <div class="form-group">
      Artist Name
      <input type="text" name="artist[name]" id="Artist Name" class="form-control" value="<%= @song.artist.name %>">
    </div>    

    <% @genres.each do |genre|%>
    <div class="checkbox">
      <label for="genre">
        <input type="checkbox" class="checkbox" name="genre[name]">
        <%= genre.name %>
        </label>
      </div>
    <% end %>
    <input type="submit" class="btn btn-default" value="Save">
  </form>
</div>