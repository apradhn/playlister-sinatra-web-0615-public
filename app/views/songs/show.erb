<% if @message != "" %>
  <div class="row">
    <div class="alert alert-success alert-dismissible col-md-4" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= @message %>
    </div>      
  </div>

<% end %>

<div class="col-md-8">
  <h2><%= @song.name %></h2>
  <h3>Artist: <a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a></h3>
  <h3>Genres</h3>
  <ul>
    <% @song.genres.each do |genre| %>
    <li><a href="/genres/<%= genre.slug %>"><%= genre.name %></a></li>
    <% end %>
  </ul>
  <a href="/songs/<%= @song.slug %>/edit" class="btn btn-default">Edit Song</a>
</div>